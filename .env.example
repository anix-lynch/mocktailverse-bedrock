# AWS Configuration
AWS_ACCESS_KEY=your_aws_access_key_here
AWS_SECRET_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# S3 Bucket Configuration
RAW_BUCKET=mocktailverse-raw
PROCESSED_BUCKET=mocktailverse-processed

# DynamoDB Configuration
DYNAMODB_TABLE=mocktailverse-jobs

# Lambda Configuration
LAMBDA_FUNCTION_NAME=mocktailverse-transform
LAMBDA_RUNTIME=python3.9
LAMBDA_MEMORY=256
LAMBDA_TIMEOUT=900

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Local Development (Optional)
# For local testing with LocalStack
LOCALSTACK_ENDPOINT=http://localhost:4566
USE_LOCALSTACK=false

# Logging Configuration
LOG_LEVEL=INFO
CLOUDWATCH_LOG_GROUP=/aws/lambda/mocktailverse-transform

# Cost Tracking (Optional)
COST_TRACKING_ENABLED=true
COST_BUDGET_WARNING=50.00  # USD

# Data Processing Configuration
MAX_FILE_SIZE_MB=10
SUPPORTED_FILE_TYPES=json,csv
BATCH_SIZE=100  # Records per batch

# CockroachDB Configuration (Optional)
# Uncomment to use CockroachDB instead of DynamoDB
# USE_COCKROACHDB=true
# DATABASE_URL=postgresql://root@localhost:26257/defaultdb?sslmode=disable